@model CustomerDetailsWeb.Models.DTO.CustomerDTO

@{
}

<h1 class="mt-3">Edit Customer</h1>
<form method="post" asp-action="Edit">

	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" value="@Model.Name" />
	</div>

	<div class="mt-3">
		<label class="form-label">Age</label>
		<input type="text" class="form-control" asp-for="Age" value="@Model.Age" />
	</div>

	<div class="mt-3">
		<label class="form-label">Height (meters)</label>
		<input type="text" class="form-control" asp-for="Height" value="@Model.Height" />
	</div>

	<div class="mt-3">
		<label class="form-label">PostCode</label>
		<input type="text" class="form-control" asp-for="PostCode" value="@Model.PostCode" />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>