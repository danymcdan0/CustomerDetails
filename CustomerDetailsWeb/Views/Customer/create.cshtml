@model CustomerDetailsWeb.Models.CustomerViewModel

@{
}

<h1 class="mt-3">Create Customer</h1>
<form method="post" asp-action="Create">

	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>

	<div class="mt-3">
		<label class="form-label">Age</label>
		<input type="text" class="form-control" asp-for="Age" />
	</div>

	<div class="mt-3">
		<label class="form-label">Height (meters)</label>
		<input type="text" class="form-control" asp-for="Height" />
	</div>

	<div class="mt-3">
		<label class="form-label">PostCode</label>
		<input type="text" class="form-control" asp-for="PostCode" />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>

</form>